<div class="container">

  <!-- <h1><a href="<%= @path %>">Hacker News Mini</a></h1> -->

  <% @entries.each do |item| %>
    <% begin item.id %>
      <% if item.voting.score %>
        <div class="item">
          <div class="number"><%= item.number %></div>

          <h2>
            <% if item.link.site %>
              <a href="<%= item.link.href %>"><%= item.link.title %></a>
            <% else %>
              <a href="http://ihackernews.com/comments/<%= item.id %>"><%= item.link.title %></a>
            <% end %>
          </h2>

          <p class="meta">
            <%= item.voting.score %> points &mdash; <%= item.time.strftime('%m/%d/%Y, %I:%M%p') %> &mdash; <em><%= item.link.site %></em>
          </p>

          <div class="links">
            <% if item.voting.score %>
              <a href="http://www.readability.com/read?url=<%= item.link.href %>" class="btn">Article text</a>

              <a href="http://ihackernews.com/comments/<%= item.id %>" class="btn mobile"><%= item.comments_count %> comments</a>

              <a href="http://news.ycombinator.com/item?id=<%= item.id %>" class="btn desktop"><%= item.comments_count %> comments</a>
            <% end %>
          </div>
        </div>
      <% end %>
    <% rescue %>
    <% end %>
  <% end %>
<% if @next_page or @prev_page %>
  <div class="pagination">
    <% if @prev_page and @prev_page != 0 %>
    <a href="<%= @path %>/page/<%= @prev_page %>" class="btn primary">Previous Page</a>
    <% end %>
    <a href="<%= @path %>/page/<%= @next_page %>" class="btn primary">Next Page</a>
  </div>
<% end %>

</div>